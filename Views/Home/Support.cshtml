@model FinalProject.Models.SupportPageModel
@{
    ViewBag.Title = "Support";
}
<h1 class="role"><strong>Supports</strong></h1>

<main aria-labelledby="Support">
    <div class="row">
        @foreach (var item in Model.supportPageItems)
        {
            <section class="col-md-4" aria-labelledby="gettingStartedTitle">
                @if (!string.IsNullOrWhiteSpace(item.HeroImage))
                {
                    <div class="card" style="width: 18rem">
                        <img class="card-img-top" src=@($"/Images/Support/{item.HeroImage}.png") alt=@($"{item.HeroName}") />
                        <div class="card-body">
                            <h2 id="card-text" class="heroName">@item.HeroName</h2>
                        </div>
                    </div>
                }
                <p class="overview"><strong>Overview:</strong> @item.HeroOverview</p>
                <p class="originStory"><strong>Origin Story:</strong> @item.HeroOrigin</p>
            </section>
        }
    </div>
</main>
<!--Images and hero descriptions from https://overwatch.blizzard.com/en-us/heroes/-->
